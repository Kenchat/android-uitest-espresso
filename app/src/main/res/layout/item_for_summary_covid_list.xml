<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:id="@+id/summaryItemContainer"
    android:background="@drawable/border_background"
    android:padding="15dp">

    <TextView
        android:id="@+id/tvContryNameLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/country_name_label"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvCountryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@id/tvContryNameLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTotalConfirmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/total_confirm_label"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/tvContryNameLabel"
        app:layout_constraintTop_toBottomOf="@id/tvContryNameLabel" />

    <TextView
        android:id="@+id/tvTotalConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/tvCountryName"
        app:layout_constraintLeft_toRightOf="@id/tvContryNameLabel"
        app:layout_constraintTop_toBottomOf="@id/tvCountryName" />

</androidx.constraintlayout.widget.ConstraintLayout>